// prisma/schema.prisma

generator client {
  provider      = "prisma-client-js"
  output        = "../app/generated/prisma/client"
  binaryTargets = ["native", "rhel-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// ===== AUTH.JS MODELS =====
model Account {
  id                String  @id @default(uuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

// ===== USER MODEL =====
model User {
  id            String    @id @default(uuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String? 

  accounts Account[]
  sessions Session[]

  groups    Group[]
  tunnels   Tunnel[]
  setupKeys SetupKey[]
  devices   Device[]


  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model SetupKey {
  id        String   @id @default(uuid())
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  key       String   @unique 
  netbirdId String             
  name      String
  
  autoGroups String[]          
  
  expiresAt DateTime
  createdAt DateTime @default(now())
  revokedAt DateTime?          
  
  @@index([userId])
  @@map("setup_keys")
}

// ===== GROUP MODEL =====
model Group {
  id             String @id @default(uuid())
  netbirdGroupId String @unique
  name           String

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  peersCount     Int     @default(0)
  resourcesCount Int     @default(0)
  issued         String?

  groupPeers GroupPeer[]
  resources  Json?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@index([netbirdGroupId])
  @@map("groups")
}

// ===== PEER MODEL =====
model Peer {
  id            String @id @default(uuid())
  netbirdPeerId String @unique
  name          String

  groupPeers            GroupPeer[]
  tunnelsAsExitNode     Tunnel[]             @relation("TunnelExitNode")
  tunnelsAsTravelRouter TunnelTravelRouter[] @relation("TunnelTravelRouter")

  ip             String?
  connectionIp   String?
  dnsLabel       String?
  extraDnsLabels String[]

  connected Boolean   @default(false)
  lastSeen  DateTime?
  lastLogin DateTime?

  os            String?
  kernelVersion String?
  version       String?
  uiVersion     String?
  hostname      String?
  serialNumber  String?

  geonameId   Int?
  countryCode String?
  cityName    String?

  userId           String?
  sshEnabled       Boolean @default(false)
  approvalRequired Boolean @default(false)
  ephemeral        Boolean @default(false)

  loginExpirationEnabled      Boolean @default(false)
  loginExpired                Boolean @default(false)
  inactivityExpirationEnabled Boolean @default(false)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([netbirdPeerId])
  @@index([connected])
  @@index([hostname])
  @@map("peers")
}

// ===== MANY-TO-MANY: Group <-> Peer =====
model GroupPeer {
  id String @id @default(uuid())

  groupId String
  group   Group  @relation(fields: [groupId], references: [id], onDelete: Cascade)

  peerId String
  peer   Peer   @relation(fields: [peerId], references: [id], onDelete: Cascade)

  addedAt DateTime @default(now())

  @@unique([groupId, peerId])
  @@index([groupId])
  @@index([peerId])
  @@map("group_peers")
}

// ===== TUNNEL MODEL =====
model Tunnel {
  id String @id @default(uuid())

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  exitNodeId String
  exitNode   Peer   @relation("TunnelExitNode", fields: [exitNodeId], references: [id], onDelete: Cascade)

  travelRouters TunnelTravelRouter[]

  name    String?
  enabled Boolean @default(true)

  netbirdGroupId  String?
  netbirdRouteId  String?
  netbirdPolicyId String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("tunnels")
}

// ===== MANY-TO-MANY: Tunnel <-> Peer =====
model TunnelTravelRouter {
  id String @id @default(uuid())

  tunnelId String
  tunnel   Tunnel @relation(fields: [tunnelId], references: [id], onDelete: Cascade)

  peerId String
  peer   Peer   @relation("TunnelTravelRouter", fields: [peerId], references: [id], onDelete: Cascade)

  addedAt DateTime @default(now())

  @@unique([tunnelId, peerId])
  @@index([tunnelId])
  @@index([peerId])
  @@map("tunnel_travel_routers")
}

// ===== DEVICE MODEL =====
model Device {
  id           String  @id @default(uuid())
  deviceId     String  @unique 
  passwordHash String          

  userId String?
  user   User?   @relation(fields: [userId], references: [id], onDelete: SetNull)

  name         String?
  registeredAt DateTime? 
  lastSeenAt   DateTime?

  jwtIssuedAt  DateTime? 
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([userId])
  @@map("devices")
}